    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "cjc ./src/myMacro/testMarco.cj --output-type=dylib -o m.so && cpm build"
        },
        {
            "label": "run",
            "type": "shell",
            "command": "./bin/main",
            "problemMatcher": []
        },
        {
            "label": "debug marco",
            "type": "shell",
            "command": "cjc ./src/myMacro/testMarco.cj --output-type=dylib -o m.so && cjc -debug-macro --macro-lib=./m.so ./src/main.cj",
            "problemMatcher": []
        },
        {
            "label": "clean debug marco",
            "type": "shell",
            "command": "rm ./src/debug_main.cj",
            "problemMatcher": []
        }

        debug_main.cj
    ]
}