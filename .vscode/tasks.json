{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "cpm build"
        },
        {
            "label": "test",
            "type": "shell",
            "command": "cpm test test",
            "problemMatcher": []
        },
        {
            "label": "coverage",
            "type": "shell",
            "command": "cjcov && echo 'ðŸ“ˆ please open ./index.html to see coverage'",
            "dependsOn":["test"],
            "problemMatcher": []            
        },
        {
            "label": "build & test",
            "type": "shell",
            "command": "",
            "dependsOrder": "sequence"
            "dependsOn":["build", "test"]
            "problemMatcher": []
        },
        {
            "label": "debug marco",
            "type": "shell",
            "command": "cjc ./src/serialization/*.cj --output-type=dylib -o m.so && cjc -debug-macro --macro-lib=./m.so ${input:pickMarcoTarget}",
            "problemMatcher": []
        },
        {
            "label": "clean marco debug output",
            "type": "shell",
            "command": "rm ./test/debug_*.cj",
            "problemMatcher": []
        }
    ],
    "inputs": [
        {
            "id": "pickMarcoTarget",
            "type": "promptString"
            "description": "marco target"
            "default": "./test/TestCollection.cj"          
        }
      ]
}